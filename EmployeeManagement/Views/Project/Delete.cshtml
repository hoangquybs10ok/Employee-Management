@model EmployeeManagement.Models.ProjectModel

@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>

<h4>Bạn có chắc chắn muốn xóa project này?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">
            @(Model.StartDate.HasValue? Model.StartDate.Value.ToString("dd/MM/yyyy HH:mm") : "")
        </dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">
            @(Model.EndDate.HasValue? Model.EndDate.Value.ToString("dd/MM/yyyy HH:mm") : "")
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>


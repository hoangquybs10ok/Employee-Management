@model IEnumerable<EmployeeManagement.EF.Entity.TimeLogEntity>

@{
    ViewData["Title"] = "Báo cáo giờ làm việc hôm qua";
    var message = TempData["Message"] as string;
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-clock-history me-2"></i>
                Báo cáo giờ làm việc ngày @ViewBag.Yesterday
            </h4>
            <form asp-action="SendReport" method="post" class="mb-0">
                <button type="submit" class="btn btn-light btn-sm">
                    <i class="bi bi-send me-1"></i> Gửi báo cáo email
                </button>
            </form>
        </div>

        <div class="card-body bg-light">
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm bg-white">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 25%">Tên nhân viên</th>
                            <th style="width: 15%">Giờ Check-in</th>
                            <th style="width: 15%">Giờ Check-out</th>
                            <th>Công việc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.User?.FullName</td>
                                    <td>@log.CheckIn.ToString("HH:mm")</td>
                                    <td>@(log.CheckOut.HasValue? log.CheckOut.Value.ToString("HH:mm") : "<span class='text-danger'>Chưa check-out</span>")</td>
                                    <td>@(log.Task ?? "Không có")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="bi bi-exclamation-circle me-1"></i>
                                    Không có dữ liệu hôm qua
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
